@model SalesWebMvc.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="bloco-login">
    <div class="bg-info bloco-login-dviesq">
        <h2 class="alert modal-title">@ViewData["Title"]</h2>
    </div>
    <div class=" col-md-6">
        <form asp-action="Login">

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="email@email.com">
                <span asp-validation-for="Email" class="text-danger"></span>
                @*<small id="emailHelp" class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>*@
            </div>
            <div class="form-group">
                <label asp-for="Password">Senha</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Senha">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
            @*<a asp-action="Registro" asp-controller="User">Não Sou Cadastrado</a>*@
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}