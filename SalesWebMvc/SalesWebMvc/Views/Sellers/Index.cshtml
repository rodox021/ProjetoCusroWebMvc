@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Vendedor";
}

<h2 class="alert alert-info">@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-default">
        Novo
    </a>
</p>
<table class="table table-striped table-hover table-responsive ">
    <thead >
        <tr class="btn-default">
            <th>
                @Html.DisplayNameFor(modelitem => modelitem.Name)
            </th>
            <th>
                @Html.DisplayNameFor(modelitem => modelitem.Email)
            </th>
            
            <th>
                @Html.DisplayNameFor(modelitem => modelitem.BaseSalary)
            </th>
            <th>
                @Html.DisplayNameFor(modelitem => modelitem.Department)
            </th>
            <th>

            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Email)
            </td>
            
            <td>
                @Html.DisplayFor(modelitem => item.BaseSalary)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Department.Name)
            </td>
            <td>
                <a class="btn btn-warning mr-15" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                <a class="btn btn-info mr-15" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info fa-lg"></i></a>
                <a class="btn btn-danger mr-15 " asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash fa-lg"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>