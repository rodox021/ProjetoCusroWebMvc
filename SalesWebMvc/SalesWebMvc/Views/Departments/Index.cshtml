@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Departament";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fa fa-plus fa-lg"></i></a>
</p>
<table class="table table-striped table-hover table-responsive table-dark ">
    <thead>
        <tr>
            <th>
               Nome
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
            
                <a class="btn btn-warning mr-15" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit fa-lg"></i></a>
                <a class="btn btn-info mr-15" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info fa-lg"></i></a>
                <a class="btn btn-danger mr-15s" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
